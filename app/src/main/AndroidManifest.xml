<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ro.topiq.smartekg" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListPairedDevicesActivity"
            android:label="@string/title_activity_list_paired_devices" >
        </activity>
        <activity
            android:name=".DrawEKG"
            android:label="@string/title_activity_draw_ekg" >
        </activity>
        <activity
            android:name=".ListEkgFilesActivity"
            android:label="@string/title_activity_list_ekg_files" >
        </activity>
    </application>

</manifest>
